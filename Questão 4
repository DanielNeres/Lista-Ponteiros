#include <stdio.h>
#include <math.h>

int calcula_hexagono(float l, float *area, float *perimetro);

int main()
{
	float area = 0, lado = 2, perimetro = 0;
	float *ponteiroarea = &area, *ponteiroperimetro = &perimetro;
	calcula_hexagono(lado, ponteiroarea, ponteiroperimetro);
	printf("a sua area e = %f, e seu perimetro e = %f", area, perimetro);
	return 0;
}

int calcula_hexagono(float l, float *area, float *perimetro){
	*area = ((3 * (l*l)) * sqrt(3))/2;
	*perimetro = 6 * l;
	return 0;
}
